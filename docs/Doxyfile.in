PROJECT_NAME           = "@CMAKE_PROJECT_NAME@"
PROJECT_NUMBER        = "@CMAKE_PROJECT_VERSION@"
PROJECT_BRIEF         = "Flow Arithmetic Calculator"

EXTRA_PACKAGES        = [utf8]{inputenc}

OUTPUT_DIRECTORY      = "@CMAKE_CURRENT_BINARY_DIR@"
INPUT                 = "@CMAKE_SOURCE_DIR@/src" \
                       "@CMAKE_SOURCE_DIR@/include" \
                       "@CMAKE_SOURCE_DIR@/docs/mainpage.md"

USE_MDFILE_AS_MAINPAGE = "@CMAKE_SOURCE_DIR@/docs/mainpage.md"
RECURSIVE              = YES
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES

GENERATE_HTML          = YES
GENERATE_LATEX         = YES
GENERATE_PDF           = YES
PDF_HYPERLINKS         = YES

BUILTIN_STL_SUPPORT    = YES
WARN_NO_PARAMDOC      = YES
WARN_IF_UNDOCUMENTED  = YES

SOURCE_BROWSER        = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES

GENERATE_TREEVIEW      = YES
HTML_DYNAMIC_SECTIONS  = YES
DISABLE_INDEX         = NO
FULL_SIDEBAR         = YES

COLLABORATION_GRAPH    = YES
CALL_GRAPH            = YES
CALLER_GRAPH          = YES
CLASS_GRAPH          = YES


EXTRACT_ALL          = YES
HIDE_UNDOC_RELATIONS = NO
HAVE_DOT             = YES
UML_LOOK             = YES
UML_LIMIT_NUM_FIELDS = 100
TEMPLATE_RELATIONS   = YES
DOT_GRAPH_MAX_NODES  = 150

# Enable preprocessing
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION       = YES
EXPAND_ONLY_PREDEF    = NO 

EXAMPLE_PATH = "@CMAKE_SOURCE_DIR@/docs"